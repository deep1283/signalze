# Supabase Postgres connection string (NOT the API URL)
DATABASE_URL=postgresql://postgres:<password>@<host>:5432/postgres

# Worker locking and polling
WORKER_LOCK_KEY=84521791
POLL_INTERVAL_MINUTES=15
FREE_TIER_MODE=true
SOURCE_OVERLAP_MINUTES=3
SOURCE_TASK_BATCH_SIZE=300
PER_SOURCE_RESULT_LIMIT=40

# Alert delivery tuning
ALERT_BATCH_SIZE=250
MAX_ALERT_RETRIES=3
ALERT_RETRY_BASE_SECONDS=60
ALERT_RETRY_MAX_SECONDS=1800

# Source toggles
SOURCE_HN_ENABLED=true
SOURCE_DEVTO_ENABLED=true
SOURCE_GITHUB_DISCUSSIONS_ENABLED=true
SOURCE_REDDIT_ENABLED=false
SOURCE_GOOGLE_ENABLED=false
SOURCE_BRAVE_ENABLED=false
SOURCE_PRODUCTHUNT_ENABLED=false

# Source-specific poll intervals (minutes)
SOURCE_HN_POLL_INTERVAL_MINUTES=360
SOURCE_DEVTO_POLL_INTERVAL_MINUTES=720
SOURCE_GITHUB_DISCUSSIONS_POLL_INTERVAL_MINUTES=360
SOURCE_REDDIT_POLL_INTERVAL_MINUTES=360
SOURCE_GOOGLE_POLL_INTERVAL_MINUTES=1440
SOURCE_BRAVE_POLL_INTERVAL_MINUTES=1440
SOURCE_PRODUCTHUNT_POLL_INTERVAL_MINUTES=1440

# Optional source-level daily request caps (empty = unlimited)
# In FREE_TIER_MODE=true, safe defaults are applied when left empty.
SOURCE_HN_DAILY_REQUEST_LIMIT=
SOURCE_DEVTO_DAILY_REQUEST_LIMIT=
SOURCE_GITHUB_DISCUSSIONS_DAILY_REQUEST_LIMIT=
SOURCE_REDDIT_DAILY_REQUEST_LIMIT=
SOURCE_GOOGLE_DAILY_REQUEST_LIMIT=
SOURCE_BRAVE_DAILY_REQUEST_LIMIT=
SOURCE_PRODUCTHUNT_DAILY_REQUEST_LIMIT=

# Reddit OAuth (required when SOURCE_REDDIT_ENABLED=true)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=mention-worker/1.0

# Dev.to (best effort recent-articles scan)
DEVTO_TOP_DAYS=7

# GitHub Discussions (required when SOURCE_GITHUB_DISCUSSIONS_ENABLED=true)
GITHUB_TOKEN=

# Google Programmable Search
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# Brave Search API
BRAVE_API_KEY=

# HTTP settings
REQUEST_TIMEOUT_SECONDS=20
